@inject Microsoft.AspNetCore.Identity.SignInManager<Estacionamento.Models.AppUser> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<Estacionamento.Models.AppUser> UserManager
 @if (SignInManager.IsSignedIn(User))
 {
     <form method="post" asp-controller="Account" asp-action="Logoff">
         <ul class="nav navbar-nav">
         <li>
             <a method="get" asp-controller="DashBoard" asp-action="Index" class="btn btn-outline-dark mx-2">DashBoard</a>
         </li>

         <li>
             <button type="submit" class="btn btn-outline-danger mx-2">LogOff</button>
         </li>
         </ul>
 </form>
 @if(User.IsInRole("Admin"))
 {
     <form method="post" asp-controller="Account" asp-action="newAdmin">
            <ul class="nav navbar-nav">
                    <li class="text-dark nav-link">Hello!</li>
                <button type="submit" class="btn btn-outline-warning">New Admin</button>
            </ul>
     </form>
 }
 @if (User.IsInRole("Gerente"))
 {
     <form method="post" asp-controller="Account" asp-action="Register">
         <ul class="nav navbar-nav">
             <li class="text-dark nav-link">Hello!</li>
             <button type="submit" class="btn btn-outline-warning">New Employee</button>
         </ul>
     </form>
 }


}
 else
 {
 <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
     <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
         <ul class="nav navbar-nav">
             <li class="nav-item">
                 <a class="btn btn-outline-primary mx-2" asp-controller="Account" asp-action="Register">Register</a>
             </li>
             <li class="nav-item">
                 <div class="d-flex flex-row-reverse bd-highlight">
                     <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success">Login</a>
                 </div>
             </li>
         </ul>
     </div>
 </div>
 }